/dts-v1/;
/plugin/;

/ {
	compatible = "ti,beaglebone", "ti,beaglebone-black";

	/* identification */
	part-number = "BB-BONE-PWMT";
	version = "00A0";

	/* state the resources this cape uses */
	exclusive-use =
		/* the pin header uses */
		"P9.22",	/* pwm: ehrpwm0a */
		/* the hardware ip uses */
		"ehrpwm0a";

	fragment@0 {
		target = <&am33xx_pinmux>;
		__overlay__ {
			pwm_test_pins: pinmux_pwm_test_pins {
				pinctrl-single,pins = <0x150  0x3>; /* spi0_sclk = ehrpwm0A = P9_14 | MODE 3 */
			};
		};
	};

	fragment@1 {
		target = <&epwmss0>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@2 {
		target = <&ehrpwm0>;
		__overlay__ {
			pinctrl-names	= "default";
			pinctrl-0	= <&pwm_test_pins>;
			status = "okay";
		};
	};

	fragment@3 {
		target = <&ocp>;
		__overlay__ {
			pwm_test {
				compatible	= "pwm_test";
				pwms 		= <&ehrpwm0 0 500000 1>;
				pwm-names 	= "PWM0";
				enabled		= <1>;
				duty		= <0>;
				status 		= "okay";
			};
		};
	};
};
